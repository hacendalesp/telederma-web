/* ----------------
      Contacto
------------------ */

.contact-support {
	background: url('<%= asset_path("landing/bg-contact-support.png")%>') no-repeat;
	width: 100%;
	min-height: 100vh;
	background-size: cover;
	background-position: right bottom;
}

.contact-support .support-title {
	max-width: 80%;
}

.form-contact {
	width: 100%;
	background-color: #fff;
	padding: 30px;
	border-radius: 10px;
	box-shadow: 1px 3px 8px rgba(0,0,0,.3);
}

.form-contact label {
	text-align: left;
	width: 100%;
	font-family: 'robotoregular';
	color: #727176;
	font-size: 16px;
}

.form-contact input.form-control {
	font-family: 'robotoregular';
	color: #727176;
	height: 40px;
}



.sales-contact {
	background: url('<%= asset_path("landing/bg-sales-contact.png")%>') no-repeat;
	background-size: cover !important;
	background-position: left bottom !important;
}

.sales-contact .form-contact {
	background-color: rgba(255,255,255,0.7);
}



.bg-info-contact {
	background-color: #30A9D4;
	padding: 30px 20px;
}

.bg-info-contact .white-title {
	font-size: 80px;
	letter-spacing: 1px;
	font-family: 'robotobold';
}


.info-contact-text {
	padding: 20px 0;
}

.info-contact-text p {
	font-size: 16px;
	color: #fff;
	font-family: 'robotobold';
	margin: 0 0 4px;
}

.info-contact-text p:first-child {
	margin-bottom: 10px;
}

.info-contact-text p span {
	font-family: 'robotoregular';
}

.logos-p {
	padding: 25px 10px;
}


@media (max-width: 600px) {
	.form-contact {
		padding: 15px;
	}
	.form-contact .form-group {
		margin-bottom: 10px;
	}
	.sales-contact .form-contact {
		background-color: #fff;
	}
	.bg-info-contact .white-title {
		font-size: 38px;
	}
	.contact-support, .sales-contact {
		background-image: none;
		background-color: #fcfbff;
	}
}
