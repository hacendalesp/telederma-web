html, body {
	padding: 0;
	margin: 0;
}

.bg-blue-error {
	background: url('<%= asset_path("landing/bg-error.png")%>') no-repeat rgb(0,57,108);
	text-align: center;
	min-height: 100vh;
	position: relative;
	width: 100%;
	background-size: cover;
	background-position: right center;
}

.center-text-v {
	position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  transform: translate(-50%, -50%);
  color: #fff;
}

.center-text-v h2 {
	font-family: 'robotobold';
	font-size: 100px;
	letter-spacing: 1.2px;
	margin: 0;
}

.center-text-v h3 {
	font-family: 'robotolight';
	font-size: 36px;
	letter-spacing: 1.2px;
	margin: 0;
}

.center-text-v h3 b { 
	font-family: 'robotobold';
}

.center-text-v p {
	font-family: 'robotolight';
	font-size: 20px;
	margin: 0;
}

.center-text-v img {
	max-width: 45%;
}

