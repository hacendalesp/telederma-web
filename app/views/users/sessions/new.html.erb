<div class="container-fluid div_session">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img src="<%= asset_path("logo_inicio.png") %>" class="user-image logo_inicio" alt="User Image"></a>
    </div>
    <div class="col-sm-6 col-md-4 col-md-offset-2">
      <img class="profile-img" src="<%= asset_path("icono_candado.png")%>"
             alt="">
      <div class="account-wall">
        <div class="text-center init_title">
          <h2>Especialista</h2>
        </div>
        <div class="row">
          <% unless notice.nil? %>
              <div class="col-md-12">
                <div class="alert alert-success-get alert-dismissible fade in" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
                  </button>
                  <strong> <%= notice %></strong>
                </div>
              </div>
          <% end %>
          <% unless alert.nil? %>
              <div class="col-md-12">
                <div class="alert alert-warning-get alert-dismissible fade in" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
                  </button>
                  <strong><%= alert %></strong>
                </div>
              </div>
          <% end %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= devise_error_messages! %>
              <div class="form-group">
                <label for="" style="color:#eaeef4;">*Correo electrónico</label>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <label for="" style="color:#eaeef4;">*Contraseña</label>
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
              </div>
              <%= f.submit 'Ingresar', class: "form-control btn btn-primary", style: 'height:44px;background-color:#69e6fb;' %>
            </div>
          </div>
            <span class='clearfix'></span>
        <% end %>
        <br>
        <%= render partial: 'users/shared/links', locals: {tamaño: "0px", tamaño2: "1px", tamaño3: "2px"} %>
      </div>
      <div class="text-center" style="padding-top: 35px;">
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-menu-left">Regresar</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

