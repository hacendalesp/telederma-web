<div class="container-fluid div_new_pass">
	<div style="padding-top: 35px;">
    <%= link_to new_user_session_path, title: 'Regresar' do %>
      <span class="glyphicon glyphicon-menu-left"></span>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-4 col-md-offset-4">
      <div class="account-wall" style="padding:19px 0px 17px 0px">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <label for="" style="color:#eaeef4;">*Correo electrónico</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <%= f.submit "Enviame instrucciones de recuperar contraseña", class: "form-control btn btn-primary", style: 'height:44px;background-color:#69e6fb;' %>
            </div>
          </div>
				<% end %>
				<%#= render "users/shared/links" %>
			</div>
		</div>
	</div>
	<div class="row">
    <div class="col-sm-4 col-md-4 col-md-offset-5">
      <img src="<%= asset_path("logo_inicio.png") %>" class="user-image" style="width: 40%;" alt="User Image"></a>
    </div>
	</div>
</div>
