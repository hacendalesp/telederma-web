<div class="row">
  <div class="col-md-offset-1 col-md-6">
    <div class="row">
      <div class="borde"><h4 class="style_title">Ver profesional</h4></div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-3 col-md-12">
        <div id="imaginary_container">
          <div class="row">
            <div class="form-group">
            	<a><img src='<%= @professional.photo.url.nil? ? asset_path("avatar.png") : @professional.photo %>' class="imgRedonda"></a>
            </div>  
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Nombre(s)</h4>
              </div>
              <%= @professional.name %>
            </div>
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Apellidos(s)</h4>
              </div>
              <%= @professional.surnames %>
            </div>
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Identificación</h4>
              </div>
              <%= @professional.number_document %>
            </div>
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Tipo de profesional</h4>
              </div>
              <%= type_prof(@professional.type_professional) %>
            </div>
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Tarjeta profesional</h4>
              </div>
              <%= @professional.professional_card %>
            </div>
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Celular</h4>
              </div>
              <%= @professional.phone %>
            </div>
            <div class="form-group">
              <div class="col-md-12 secondary_title">
                <h4 class="control">Correo electrónico</h4>
              </div>
              <%= @professional.email %>
            </div>
            <hr>
            <%= link_to professionals_clients_cliente_index_path do %>
              <span class="btn btn-primary">Volver</span>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>